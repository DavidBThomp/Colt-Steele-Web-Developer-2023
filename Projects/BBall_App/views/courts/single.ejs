<!-- Takes from boilerplate -->
<% layout('/layouts/boilerplate') %>
<div class="row">
    <div class="col-6 offset-3">
        <div class="card mb-3">
            <img src="<%= courts.image %>" class="card-img-top img-fluid" alt="...">
            <div class="card-body">
                <h5 class="card-title"><%= courts.title %></h5>
                <p class="card-text"><%= courts.description %></p>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item">$<%= courts.price %></li>
                <li class="list-group-item"><%= courts.location %></li>
            </ul>
            <div class="card-body">
                <a href="/courts/<%= courts._id %>/edit" class="card-link"><button class="btn btn-warning">Edit
                        Court</button></a>
                <form action="/courts/<%= courts._id %>?_method=DELETE" method="POST" class="d-inline">
                    <button class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>

    </div>
</div>
